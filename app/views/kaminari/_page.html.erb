<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
  <% if page == current_page %>
    <!-- 現在のページ: 白文字でも見えるよう背景を濃くする -->
    <span class="px-4 py-2 bg-blue-600 text-white border border-blue-600 rounded">
      <%= page %>
    </span>
  <% else %>
    <!-- 通常のページリンク -->
    <%= link_to page, url_for(page: page), class: "px-4 py-2 bg-white text-gray-700 border border-gray-300 rounded hover:bg-gray-100" %>
  <% end %>

